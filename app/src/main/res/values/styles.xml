<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/green_new</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/green_new</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/dark_grey</item>
    </style>

    <!-- Dark theme -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/accent_dark</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/accent_dark</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:colorBackgroundFloating">@color/surface_dark</item>
    </style>

    <!-- Preference theme for dark mode -->
    <style name="PreferenceTheme.Dark" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/accent_dark</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/accent_dark</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:colorBackgroundFloating">@color/surface_dark</item>
    </style>
</resources>

